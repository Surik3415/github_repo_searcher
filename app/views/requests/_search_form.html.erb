<div>
  <%= form_with(model: request, method: :post, id: 'search-form') do|f| %>
    <div class="form-group">

      <div class ="mb-3 text_feald_input">
        <label class="form-label">GitHub Login:</label>
        <%= f.text_field :search_param, name: 'search_param', class: 'mb-3', placeholder: 'user login' %>

        <%= f.hidden_field :operationName, value: 'user_data_and_repos' %>
      </div>

      <div class ="mb-3">
        <%= f.submit "Search", class:'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>